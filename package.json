  },
  "lint-staged": {
    "*.{json,yaml,yml,md}": "lint"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "*",
    "eslint": "*",
    "husky": "*",
    "jest": "*",
    "prettier": "*"
  },
  "engines": {
    "node": ">=14.0.0"
  }
